--  Cache primitives

with System; use System;

package Cache is
   Cache_Line : constant := 32;

   procedure Cache_Flush_All;
   --  Flush and invalidate the cache

   procedure Cache_Disable;
   --  Disable the cache (cache is flushed before if necessary)

   procedure Cache_Flush_Line (Addr : Address);
   --  Flush a cache line

   procedure Cache_Flush_Range (First, Last : Address);
   --  Flush a range of addresses
end Cache;
