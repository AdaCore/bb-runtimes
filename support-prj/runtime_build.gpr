project Runtime_Build is
  for Languages use ("Ada", "C", "Asm");

  for Library_Auto_Init use "False";
  for Library_Name use "support";
  for Library_Kind use "static";

  for Library_Dir use "lib";
  for Object_Dir use "obj";

  for Source_Dirs use ("arch", "common");

  package Builder is
     for Switches ("Ada") use ("--RTS=zfp");
  end Builder;

  package Compiler is
     for Switches ("Ada") use ("--RTS=zfp", "-gnatapg");
  end Compiler;

end Runtime_Build;
